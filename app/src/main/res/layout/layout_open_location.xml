<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <View
            android:layout_width="260dp"
            android:layout_height="315dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_white_bg_corner" />


        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="365dp"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_loc"
                android:layout_width="135dp"
                android:layout_height="135dp"

                android:src="@drawable/img_loc" />

            <TextView
                android:id="@+id/tv_loc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/open_location_service"
                android:textColor="@color/colorActionBarSelected"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_loc_descirbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:text="@string/open_loc_descirbe"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_open"
                android:layout_width="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/shape_orange_bg_corner"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="@string/open_for_me"
                android:textColor="@color/white"
                android:layout_height="33dp" />

            <TextView
                android:id="@+id/tv_iknow"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/transparent"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="@string/i_know"
                android:textColor="@color/textColorGray"
                android:layout_height="33dp" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
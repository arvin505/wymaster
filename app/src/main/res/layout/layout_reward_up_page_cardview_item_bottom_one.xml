<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ignore="http://schemas.android.com/tools"
    android:layout_width="281dp"
    android:layout_height="49dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <RelativeLayout
        android:id="@+id/rewardUpCardRlBottomHeadIcon"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wanted_champion" />

        <com.miqtech.master.client.view.CircleImageView
            android:id="@+id/rewardUpCardIvBottomHeadIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/default_head" />
    </RelativeLayout>


    <TextView
        android:id="@+id/rewardUpCardTvBottomSee"
        android:layout_width="44dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_corners_2_stroke_white"
        android:gravity="center"
        android:text="@string/look_at"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/rewardUpCardTvBottomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@id/rewardUpCardTvBottomSee"
        android:layout_toRightOf="@id/rewardUpCardRlBottomHeadIcon"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        ignore:text="我要辣死你" />
</RelativeLayout>

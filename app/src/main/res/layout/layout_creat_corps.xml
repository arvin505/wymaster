<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_creat_corps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/no_crops"
            android:textColor="@color/textColorBattle"
            android:textSize="@dimen/text_size_15" />

        <Button
            android:id="@+id/btn_create_crops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner_orange_bg"
            android:drawableLeft="@drawable/icon_add"
            android:drawablePadding="4dp"
            android:padding="12dp"
            android:text="@string/create_crops"
            android:textColor="@color/orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_writer_corps_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/corp_name_explain"
            android:textColor="@color/textColorBattle"
            android:textSize="@dimen/text_size_12" />

        <EditText
            android:id="@+id/ed_corps_name"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corps_name_solid_white_stroke_corners"
            android:gravity="center"
            android:hint="@string/corp_name"
            android:maxLength="16"
            android:textColorHint="@color/font_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_words_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>

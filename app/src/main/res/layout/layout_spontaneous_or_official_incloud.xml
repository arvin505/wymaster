<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/ivHead"
            android:minLines="1"
            android:singleLine="true"
            android:textColor="@color/shop_buy_record_gray"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_below="@+id/tvName"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <LinearLayout
            android:id="@+id/llReleaseMatchContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivImg"
            android:layout_alignTop="@+id/ivImg"
            android:background="@drawable/match_mask_bg"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:layout_marginRight="79dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="·"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/match_champion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="·"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="3dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开赛时间 : "
                    android:textColor="@color/bg_gray"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111111111"
                    android:textColor="@color/bg_gray"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSpontaneousBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/match_green_bg" />

        <TextView
            android:id="@+id/tvMatchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivSpontaneousBg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="自发赛"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <com.miqtech.master.client.view.CircleImageView
            android:id="@+id/ivHead"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/default_head" />
    </RelativeLayout>
</LinearLayout>
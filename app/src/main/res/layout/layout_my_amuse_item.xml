<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/my_amuse_icon_item"
        android:layout_width="137dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_amuse_icon_item"
        android:layout_alignTop="@id/my_amuse_icon_item"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/my_amuse_icon_item">

        <TextView
            android:id="@+id/my_amuse_statu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/my_amuseapply_begin"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/my_amuse_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/my_amuse_statu_item"
            android:text="轻轻轻轻轻轻轻轻轻轻轻轻轻轻轻轻"
            android:textColor="@color/black_extend_intro"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/my_amuse_tt_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/my_amuse_title_item"
            android:gravity="bottom"
            android:text="比赛时间:"
            android:textColor="@color/lv_item_content_text"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/my_amuse_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_amuse_title_item"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/my_amuse_tt_item"
            android:gravity="bottom|left"
            android:singleLine="true"
            android:text="2015/11/17-2016/11/22"
            android:textColor="@color/lv_item_content_text"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/my_amuse_icon_item"
        android:layout_marginTop="8dp"
        android:background="@color/line" />

</RelativeLayout>

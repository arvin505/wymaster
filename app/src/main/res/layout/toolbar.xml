<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/toobar_togglebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/toolbar_padding"
            android:paddingLeft="@dimen/toolbar_padding"
            android:paddingTop="@dimen/toolbar_padding"
            android:src="@drawable/icon_togglebar" />

        <TextView
            android:id="@+id/tv_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/toobar_togglebar"
            android:background="@drawable/shape_messagecount_bg"
            android:maxLength="5"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:textSize="8sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/toolbar_tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_text_padding"
            android:paddingRight="@dimen/toolbar_text_padding"
            android:paddingTop="5dp"
            android:text="@string/recommend"
            android:textColor="@color/colorActionBarSelected"
            android:textSize="@dimen/toolbar_text_size" />

        <TextView
            android:id="@+id/toolbar_tv_competitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_text_padding"
            android:paddingRight="@dimen/toolbar_text_padding"
            android:paddingTop="5dp"
            android:text="@string/competitive"
            android:textColor="@color/colorActionBarUnSelected"
            android:textSize="@dimen/toolbar_text_size" />

        <TextView
            android:id="@+id/toolbar_tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/toolbar_text_padding"
            android:paddingRight="@dimen/toolbar_text_padding"
            android:paddingTop="5dp"
            android:text="@string/information"
            android:textColor="@color/colorActionBarUnSelected"
            android:textSize="@dimen/toolbar_text_size" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:src="@drawable/icon_search" />

    <ImageView
        android:id="@+id/ivScan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_search"
        android:layout_toLeftOf="@+id/iv_search"
        android:src="@drawable/icon_scan"

        />

    <TextView
        android:id="@+id/tvCurrentCity"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="middle"
        android:gravity="right|center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/orange"
        android:textSize="14sp" />
</RelativeLayout>


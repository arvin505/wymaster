<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlInviteCoding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/black_gray_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/corps_invite_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/icon_share" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTitle"
        android:background="@color/dark_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/shape_white_bg_corner"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_extend_intro"
                    android:textSize="@dimen/text_size_15"
                    android:text="网娱大师比赛战队邀请"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTeamName"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_13"
                    android:text="网娱大师比赛战队邀请"
                    android:layout_marginTop="7.5dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ivCode"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tvFailureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_extend_intro"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCreateCommand"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_orange_bg_corner"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="生成娱口令"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="发到微信、QQ加队友"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

            <Button
                android:id="@+id/btnInvite"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_orange_bg_corner"
                android:text="通过关注的人、通讯录、手机号邀请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
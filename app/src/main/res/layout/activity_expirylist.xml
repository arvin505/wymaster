<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_include_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.miqtech.master.client.view.pullToRefresh.PullToRefreshRecyclerView
                android:id="@+id/prrvExpiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="6dp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_50dp"
                android:drawablePadding="30dp"
                android:drawableTop="@drawable/blank_mine"
                android:text="还没有可以兑换的奖品"
                android:textColor="@color/textColorBattle"
                android:visibility="gone" />

        </RelativeLayout>
</LinearLayout>
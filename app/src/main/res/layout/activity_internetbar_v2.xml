<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_netbar_parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.miqtech.master.client.view.layoutmanager.FullScrollView
        android:id="@+id/fullScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_netbar_header"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:background="@drawable/bar_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_netbat_head"
                            android:layout_width="95dp"
                            android:layout_height="72dp"
                            android:layout_marginLeft="12dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/netbar_head"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/default_img"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="#88000000"
                                android:padding="3dp"
                                android:text="图集"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp">

                            <TextView
                                android:id="@+id/tv_netbar_header_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:ems="10"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/tv_netbar_header_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/white"
                                android:textSize="17sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <com.miqtech.master.client.view.FlowLayout
                        android:id="@+id/ll_netbar_header_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_netbar_tab"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:paddingTop="45dp">

                    <LinearLayout
                        android:id="@+id/llNetbarInfo"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvNetbarInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/internetbar_info"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/ivinfoSelect"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/select_tab_bottom_orger"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNetbarActivity"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvNetbarActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/internetbar_activity"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/ivActivitySelect"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/select_tab_bottom_orger"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNetbarEvaluate"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvNetbarEvaluate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/internetbar_evaluate"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/ivCommentSelect"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/select_tab_bottom_orger"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fragment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_netbar_header_pay"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="207dp"
                android:background="@drawable/bg_bar_pay"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/tv_netbar_payword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_discount_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>
    </com.miqtech.master.client.view.layoutmanager.FullScrollView>

    <LinearLayout
        android:id="@+id/ll_hidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_netbar_header_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <include layout="@layout/layout_netbar_nav" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_netbar_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/ll_netbar_nav_pay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_netbar_nav_discount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:textColor="@color/orange"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_netbar_nav_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_orange_bg_corner"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="支付网费"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray" />

            <include layout="@layout/layout_netbar_tab" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
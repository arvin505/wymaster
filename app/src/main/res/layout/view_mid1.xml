<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/mid1_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/default_img" />

        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="#80FFFFFF" />

        <LinearLayout
            android:id="@+id/ll_icon_content"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_mid1_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="@dimen/recommend_head_lable_margin"
            android:background="@drawable/shape_messagecount_bg"
            android:paddingLeft="6dp"
            android:paddingRight="12dp"
            android:text="        " />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mid1_match"
        android:layout_width="match_parent"
        android:layout_height="98dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <com.miqtech.master.client.view.CircleImageView
        android:id="@+id/rating_people_icon_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cryptonym" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/comment_content_item"
            android:layout_width="wrap_content"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/comment_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/comment_level_item"
                style="@style/RatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/comment_name_item"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />

            <ImageView
                android:id="@+id/pull_down_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:src="@drawable/menu_icon" />

            <RelativeLayout
                android:id="@+id/guanzhu_ll_item"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/pull_down_item"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/pull_down_item"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/pull_down_item"
                android:background="@drawable/corner_graystroke_whitesolid"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/guanzhu_tv_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/love_off"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_details_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_content_item"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/blue_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/three_image_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_details_item"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/image_one_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_two_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_three_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/three_image_ll"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bottm_line_item"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/comment_time_item"
            android:layout_marginBottom="15dp"
            android:background="@color/gray" />
    </RelativeLayout>

</LinearLayout>
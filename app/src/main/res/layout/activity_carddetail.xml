<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_include_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/bg_card_detail"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingTop="9dp"
                    android:id="@+id/ll_card_name"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_gift" />
                    
                    <TextView
                        android:id="@+id/tv_cardname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红牛兑换券"
                        android:textColor="@color/white"
                        android:layout_marginLeft="9dp"
                        android:textSize="16sp"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_card_usetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1次"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentBottom="true"
                    />

                <ImageView
                    android:id="@+id/img_card_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_card_invalid_full"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_carddetail_line"
                android:layout_marginRight="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="有效期：        2016年3月24日-2016年3月30日"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_card_netbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="兑换网吧：   网娱一店"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_now"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:id="@+id/tv_use_now"
                android:textColor="@color/textColorBattle"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
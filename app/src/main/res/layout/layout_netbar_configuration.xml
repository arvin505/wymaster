<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/icon_config"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="配置信息"
        android:textColor="@color/black_extend_intro"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机位："
                android:textColor="@color/textColorBattle"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_netbar_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="163台"
                android:textColor="@color/black_extend_intro"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU："
                android:textColor="@color/textColorBattle" />

            <TextView
                android:id="@+id/tv_netbar_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inter Core i7"
                android:textColor="@color/black_extend_intro"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显卡："
                android:textColor="@color/textColorBattle" />

            <TextView
                android:id="@+id/tv_netbar_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NVIDEA GTX980ti"
                android:textColor="@color/black_extend_intro"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内存："
                android:textColor="@color/textColorBattle" />

            <TextView
                android:id="@+id/tv_netbar_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32GB"
                android:textColor="@color/black_extend_intro"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
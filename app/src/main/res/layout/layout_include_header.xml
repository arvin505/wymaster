<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:text="首页"
        android:paddingLeft="28dp"
        android:visibility="gone"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="14sp"
        android:textColor="@color/textColorGray"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ibLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/back"
        android:paddingLeft="12dp"
        android:paddingRight="30dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvLeftTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxEms="12"
        android:textStyle="bold"
        android:textColor="@color/shop_font_black"
        android:textSize="17sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvRightHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/textColorGray"
        android:text="往期赛事"
        android:layout_marginRight="12dp"
        android:visibility="invisible"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ibRight"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ibRight1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@+id/ibRight"
        android:background="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/info_praise_collect_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/ibRight"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/praise_ll_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/praise_iv_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/praise_no_oranger" />

            <TextView
                android:id="@+id/praise_number_tv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collect_ll_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collect_iv_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/collect_no_oranger" />

            <TextView
                android:id="@+id/collect_number_tv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_bar_right"
        android:paddingLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_mine_message"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:paddingRight="22dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_bar_message_count"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bg_against_start"
        android:layout_marginTop="9dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="3"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/buttom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/shop_splite_line" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_mid1_item1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="20"
        android:text="风暴英雄CSL职业之路高校联赛火热报名中"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已报名："
            android:textColor="@color/textColorBattle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mid1_item1_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2845"
            android:textColor="@color/colorActionBarSelected"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:textColor="@color/textColorBattle"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mid1_item1_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015/11/20"
            android:textColor="@color/textColorBattle"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
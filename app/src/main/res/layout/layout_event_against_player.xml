<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ignore="http://schemas.android.com/tools"
    android:id="@+id/playerLlItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/playerRl"
        android:layout_width="183dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/playerLineLeft"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/shop_buy_record_gray" />

        <LinearLayout
            android:id="@+id/playerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/playerLineLeft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerANum"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/light_gray1"
                android:gravity="center"
                android:textColor="@color/shop_buy_record_gray"
                android:textSize="10sp"
                ignore:text="1" />

            <TextView
                android:id="@+id/playerAName"
                android:layout_width="102dp"
                android:layout_height="18dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxEms="9"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                ignore:text="权威" />

            <TextView
                android:id="@+id/playerAScore"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/orange"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                ignore:text="2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerA"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/playerLineLeft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerBNum"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/light_gray1"
                android:gravity="center"
                android:textColor="@color/shop_buy_record_gray"
                android:textSize="10sp"
                ignore:text="8" />

            <TextView
                android:id="@+id/playerBName"
                android:layout_width="102dp"
                android:layout_height="18dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxEms="9"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                ignore:text="权威" />

            <TextView
                android:id="@+id/playerBScore"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/light_gray1"
                android:gravity="center"
                android:textColor="@color/shop_buy_record_gray"
                android:textSize="10sp"
                ignore:text="1" />
        </LinearLayout>

        <View
            android:id="@+id/playerLineRight"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/playerA"
            android:background="@color/shop_buy_record_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="fill_parent">

        <View
            android:id="@+id/playerLineDown"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/shop_buy_record_gray" />

        <View
            android:id="@+id/playerLineUp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_above="@id/playerLineDown"
            android:background="@color/shop_buy_record_gray" />
    </RelativeLayout>
</LinearLayout>
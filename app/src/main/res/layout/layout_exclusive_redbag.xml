<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:paddingBottom="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:paddingTop="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/exclusive_white_bg">

        </View>

        <ImageView
            android:id="@+id/ivExclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/exclusive_icon" />

        <TextView
            android:id="@+id/tvExclusiveTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivExclusive"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/exclusive_title"
            android:textColor="@color/font_black"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExclusiveTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="12dp">

            <ListView
                android:id="@+id/lvExclusive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@drawable/exclusive_money_bg" />

            <TextView
                android:id="@+id/tvExclusiveInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/exclusive_info"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_size_12" />

            <Button
                android:id="@+id/btnGoUse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_orange_bg_corner"
                android:text="马上使用"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
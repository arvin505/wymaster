<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_include_header" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.miqtech.master.client.view.pullToRefresh.PullToRefreshRecyclerView
                android:id="@+id/prrvDatas"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvErrorPage"
                android:text="还没有商品"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:drawablePadding="20dp"
                android:layout_marginTop="@dimen/margin_50dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/textColorBattle"
                android:drawableTop="@drawable/blank_mine"
                />

        </RelativeLayout>

</LinearLayout>
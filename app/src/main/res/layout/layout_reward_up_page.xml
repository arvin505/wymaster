<?xml version="1.0" encoding="utf-8"?>
<com.miqtech.master.client.view.snapscrollview.McoyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ignore="http://schemas.android.com/tools"
    android:id="@+id/mcoyScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:focusable="false"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/reawrdUpLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <LinearLayout
                android:id="@+id/reawrdUpLlBack"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back_white_img" />
            </LinearLayout>


            <TextView
                android:id="@+id/rewardUpTitle"
                android:layout_width="fill_parent"
                android:layout_marginLeft="57dp"
                android:layout_marginRight="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:focusable="true"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                ignore:text="234254fadfadffadfadfgfhdgfhjhfjhfjhjfhjfhjfhjfhjtyteytryet"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />
        </FrameLayout>

        <com.miqtech.master.client.view.cardView.CardView
            android:id="@+id/rewardUpCardView"
            android:layout_width="281dp"
            android:layout_height="466dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rewardUpRlLove"
                android:layout_width="54dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rewardUpIvLove"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wanted_love" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rewardUpIvLove"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/love"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/rewardUpTvLoveNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    ignore:text="999" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rewardUpRlComment"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp">

                <ImageView
                    android:id="@+id/rewardUpIvComment"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wanted_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rewardUpIvComment"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/leave_a_message"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/rewardUpTvCommentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    ignore:text="999" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</com.miqtech.master.client.view.snapscrollview.McoyScrollView>
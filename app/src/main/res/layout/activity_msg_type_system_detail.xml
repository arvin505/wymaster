<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/msg_system_header"
        layout="@layout/layout_include_header" />

    <TextView
        android:id="@+id/msg_system_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_system_header"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="每周红包"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/msg_system_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_system_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="44444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444"
        android:textColor="@color/font_gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/msg_system_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/msg_system_detail"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="2015.10.08"
        android:textColor="@color/font_gray"
        android:textSize="13sp" />

</RelativeLayout>
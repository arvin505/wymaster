<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_include_netbarhead" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <com.miqtech.master.client.view.RefreshLayout
        android:id="@+id/refresh_view_comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="15dp">

        <!--<include
            layout="@layout/exception_page"
            android:visibility="gone" />-->

        <com.miqtech.master.client.view.MyListView
            android:id="@+id/netbat_comment_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:focusableInTouchMode="true"
            android:listSelector="@color/transparent"
            android:scrollbars="none"></com.miqtech.master.client.view.MyListView>

    </com.miqtech.master.client.view.RefreshLayout>

</LinearLayout>
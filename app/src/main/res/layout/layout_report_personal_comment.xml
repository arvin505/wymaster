<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_person_comment"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:background="@drawable/report_comment_bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/report_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_comment_report_img" />

    <TextView
        android:id="@+id/report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/report_iv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/report_iv"
        android:gravity="bottom"
        android:text="举报"
        android:textColor="@color/textColorBattle"
        android:textSize="@dimen/text_size_11" />

</RelativeLayout>
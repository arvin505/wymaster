<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/layout_include_header" />

    <com.miqtech.master.client.view.PullableScrollView
        android:id="@+id/coinsScrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlAdvertisement"
                    android:layout_width="fill_parent"
                    android:layout_height="140dp">

                    <com.miqtech.master.client.view.BannerPagerView
                        android:id="@+id/advertisementCoins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"></com.miqtech.master.client.view.BannerPagerView>

                    <LinearLayout
                        android:id="@+id/llAdvertiseDots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"></LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llTitleBarFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/llCoinsTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/coins_total" />

                        <TextView
                            android:id="@+id/tvCoinsTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="@string/goldCoinNum"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/shop_splite_line" />

                    <LinearLayout
                        android:id="@+id/llEverydaySignin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cdk_exchange_pic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/cdkExchange"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/shop_splite_line" />

                    <LinearLayout
                        android:id="@+id/llDuihuanRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/duihuan_record" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/duihuanrecord"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/shop_splite_line" />

                    <LinearLayout
                        android:id="@+id/llCoinsTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/coins_task" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="@string/coinstask"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shop_splite_line" />

                <LinearLayout
                    android:id="@+id/llSignAndGame"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llSign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sign_get_prize_pic" />

                        <TextView
                            android:id="@+id/tvSignGetPrize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9dp"
                            android:text="@string/signGetPrize"
                            android:textColor="@color/shop_font_black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/shop_splite_line" />

                    <LinearLayout
                        android:id="@+id/llGame"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@drawable/game_hall_pic" />

                        <TextView
                            android:id="@+id/tvGameHall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9dp"
                            android:text="@string/gameHall"
                            android:textColor="@color/shop_font_black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSnatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/shop_bg_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp">

                        <TextView
                            android:id="@+id/ivSnatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/snatch_pic"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="@string/snatch"
                            android:textColor="@color/shop_font_green"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:id="@+id/tvSnatchMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="6dp"
                            android:drawableRight="@drawable/gold_coin_more"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="@string/more"
                            android:textColor="@color/shop_font_black_light"
                            android:textSize="@dimen/text_size_12" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <com.miqtech.master.client.view.MyListView
                        android:id="@+id/lvSnatch"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"></com.miqtech.master.client.view.MyListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llExpiryArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/shop_bg_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/ivExpiryArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/expiry_area_pic"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="@string/expiryArea"
                            android:textColor="@color/shop_font_red"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:id="@+id/tvExpiryAreaMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="6dp"
                            android:drawableRight="@drawable/gold_coin_more"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="@string/more"
                            android:textColor="@color/shop_font_black_light"
                            android:textSize="@dimen/text_size_12" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/shop_splite_line" />

                    <com.miqtech.master.client.view.MyGridView
                        android:id="@+id/gvExpiryArea"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:horizontalSpacing="12dp"
                        android:numColumns="2"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="12dp"></com.miqtech.master.client.view.MyGridView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.miqtech.master.client.view.PullableScrollView>

    <LinearLayout
        android:id="@+id/llTitleBarSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/llCoinsTotalSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coins_total" />

            <TextView
                android:id="@+id/tvCoinsTotalSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/goldCoinNum"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/shop_splite_line" />

        <LinearLayout
            android:id="@+id/llEverydaySigninSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cdk_exchange_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/cdkExchange"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/shop_splite_line" />

        <LinearLayout
            android:id="@+id/llDuihuanRecordSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duihuan_record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/duihuanrecord"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/shop_splite_line" />

        <LinearLayout
            android:id="@+id/llCoinsTaskSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coins_task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/coinstask"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
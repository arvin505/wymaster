<?xml version="1.0" encoding="UTF-8"?>  
    <!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->  
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
        <item>  
            <shape>  
                <solid android:color="#92808080" />  
                <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"  
                    android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />    
                <stroke android:width="1dp" android:color="#92808080" />  
            </shape>  
        </item>  
        <item android:top="1dp" android:left="1dp" android:bottom="1dp" android:right="1dp">  
            <shape>  
                <solid android:color="#92808080" />  
                <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"  
                    android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />  
                <stroke android:width="1dp" android:color="#fbfbff" />  
            </shape>  
        </item>    
    </layer-list>  